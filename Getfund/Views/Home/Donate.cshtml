@model Getfund.Models.Donation
@{
    ViewBag.Title = "Donate";
}
<head>

    <link rel="stylesheet" href="~/Content/post.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
</head>
<body>
    <main>
        <div class="box">
            <div class="inner-box">
                <div class="tab-content p-4 p-md-5" id="v-pills-tabContent">

                    <form action="/Home/Donate" autocomplete="on" class="sign-in-form" method="post">
                        <h3 class="mb-4">@ViewBag.Message</h3>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Project Name</label>
                                    <input type="text" class="form-control" placeholder="Project name">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Project Name</label>
                                    <input type="datetime" class="form-control" placeholder="Time">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Donation Amount</label>
                                    <input type="number" class="form-control" min="0" placeholder="The amount">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Transaction ID</label>
                                    <input type="text" class="form-control" placeholder="Transaction ID only">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Donations from</label>
                                    <input type="text" class="form-control" value="@Session["UsernameSS"]">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Project Owner</label>
                                    <input type="text" class="form-control" value="Project Owner">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Project Name</label>
                                    <textarea class="form-control" rows="1">Description about the project will be here.</textarea>
                                </div>
                            </div>
                        </div>

                        <div>
                            <input type="submit" value="Upload Data" class="btn" />
                        </div>
                    </form>
                    <!--File Upload All Data Post End-->
                    <div>
                        <form action="/Home/Search" autocomplete="on" class="sign-in-form">
                            <input type="submit" value="Cancel" class="btn" />
                        </form>

                    </div>

                </div>
            </div>
        </div>
    </main>

    <script src="~/Scripts/post.js"></script>

</body>
