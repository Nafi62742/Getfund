@model Getfund.Models.ShowDetails

@{
    ViewBag.Title = "DonationPage";
}

<head>

    <link rel="stylesheet" href="~/Content/post.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <script src="https://kit.fontawesome.com/0709430f83.js" crossorigin="anonymous"></script>

    <script src="https://code.jquery.com/jquery-3.4.1.js"></script>
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/details.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <main>
        <div class="box">
            <div class="inner-box">
                <div class="tab-content p-4 p-md-5" id="v-pills-tabContent">

                    <h3 class="mb-4">@ViewBag.Message</h3> 
                    <form action="/Home/Donate" autocomplete="on" class="sign-in-form" method="post">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Project Name</label>
                                    <input type="text" class="form-control" placeholder="Project name" value="@Model.Title">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Donation Date</label>
                                    <input type="text" class="form-control" name="DonateTime" id="DonateTime" value="@TempData["Donationdate"]">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Donation Amount</label>
                                    <input type="number" class="form-control"  name="Amount" id="Amount" placeholder="The amount" value="@TempData["DonatedMoney"]" >
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Transaction ID</label>
                                    <input type="text" class="form-control" name="transaction_id" id="transaction_id" placeholder="Transaction ID only" required>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Donations from</label>
                                    <input type="text" class="form-control" value="@Session["UsernameSS"]" name="getCname" id="getCname" >
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Project Owner</label>
                                    
                                    <input type="hidden" class="form-control" name="Liked" id="Liked" value="@TempData["LikeC"]">
                                    <input type="hidden" class="form-control" name="PTittle" id="PTittle" value="@TempData["Title"]">
                                    <input type="hidden" class="form-control" name="PId" id="PId" value="@Model.PId">
                                    <input class="form-control" type="hidden" name="ID" id="ID" value="@Model.ID">
                                    <input type="text" class="form-control" value="@Model.Name">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Project Details</label>
                                    <textarea class="form-control"  name="DonateDes" id="DonateDes" >@Model.Info</textarea>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Word of appreciation</label>
                                    <input type="text" class="form-control" name="CommentArea" id="CommentArea" />
                                </div>
                            </div>
                        </div>

                        <div>
                            <input type="submit" value="Donate now" class="btn" style="float:left;margin-right:2rem" />
                        </div>
                    </form>
                    <!--File Upload All Data Post End-->
                    <div>
                        <form action="/Home/Search" autocomplete="on" class="sign-in-form">
                            <input type="submit" value="Cancel" class="btn" />
                        </form>

                    </div>

                </div>
            </div>
        </div>
    </main>

    <script src="~/Scripts/post.js"></script>

</body>

